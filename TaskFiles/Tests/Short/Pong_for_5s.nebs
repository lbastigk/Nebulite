echo Starting a game of pong

# [SETTINGS]
set-res 640 480 2
set-fps 1000
set time.fixed_dt_ms 1

# [SPAWN] Players
eval spawn ./Resources/Renderobjects/Pong/player_left.jsonc|posX=0|posY=32
eval spawn ./Resources/Renderobjects/Pong/player_right.jsonc|posX=$(640-32)|posY=32

# [SPAWN] Barrier
eval spawn ./Resources/Renderobjects/Pong/collision_barrier.jsonc|posX=0|posY=0|sprite.sizeX=640|sprite.sizeY=32
eval spawn ./Resources/Renderobjects/Pong/collision_barrier.jsonc|posX=0|posY=$(480-32)|sprite.sizeX=640|sprite.sizeY=32

# [SPAWN] Ball
eval spawn ./Resources/Renderobjects/Pong/ball.jsonc|posX=64|posY=64

# [SPAWN] Scoreboard
spawn ./Resources/Renderobjects/Pong/scoreboard.jsonc|posY=455|posX=16

# Render some frames, then exit
wait 2500
exit