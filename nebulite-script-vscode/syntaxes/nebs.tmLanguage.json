{
  "name": "Nebulite Script",
  "scopeName": "source.nebs",
  "patterns": [
    {
      "name": "comment.nebs",
      "match": "#.*$"
    },
    {
      "name": "string.quoted.nebs",
      "begin": "(?<=\\b(?:echo|error)\\b)\\s",
      "end": "$",
      "patterns": [
        {
          "name": "variable.parameter.nebs",
          "match": "\\{[^}]*\\}"
        }
      ]
    },
    {
      "name": "variable.parameter.nebs",
      "match": "\\{[^}]*\\}"
    },
    {
      "name": "keyword.control.nebs",
      "match": "\\b(remove-all-children|set-command-handler|remove-all-invokes|get-volume-levels|set-master-volume|set-output-device|analyze-spectrum|set-input-device|set-music-volume|create-waveform|redirect-output|remove-children|selected-object|set-listener-3d|set-position-3d|start-recording|capture-output|execute-remote|generate-noise|print-dst-rect|print-src-rect|read-from-file|reload-invokes|reload-texture|set-sfx-volume|stop-recording|texture-status|generate-tone|input-mapping|parse-command|remove-invoke|render-object|write-to-file|add-children|always-clear|ensure-array|is-connected|list-devices|print-global|standardfile|detect-beat|print-state|print-value|update-text|add-invoke|align-text|disconnect|play-music|play-sound|push-front|send-image|stop-music|stop-sound|keyDelete|parenting|pop-front|push-back|reconnect|set-pitch|critical|errorlog|fade-out|make-box|pop-back|show-fps|snapshot|stop-all|connect|example|fade-in|set-fps|set-pan|set-res|always|assert|delete|deload|global|return|rotate|status|clear|crash|debug|draft|error|force|parse|print|query|reset|spawn|state|beep|copy|echo|eval|exit|fill|json|load|move|ping|save|task|wait|warn|all|cam|env|for|get|gui|key|log|map|set|if)\\b"
    },
    {
      "name": "markup.underline.link",
      "match": "\\./[^\\s|]+"
    },
    {
      "name": "constant.numeric.nebs",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  ]
}