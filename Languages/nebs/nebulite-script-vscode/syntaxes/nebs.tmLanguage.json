{
  "name": "Nebulite Script",
  "scopeName": "source.nebs",
  "patterns": [
    {
      "name": "comment.nebs",
      "match": "#.*$"
    },
    {
      "name": "string.quoted.nebs",
      "begin": "(?<=\\b(?:echo|error)\\b)\\s",
      "end": "$",
      "patterns": [
        {
          "name": "variable.parameter.nebs",
          "match": "\\{[^}]*\\}"
        }
      ]
    },
    {
      "name": "variable.parameter.nebs",
      "match": "\\{[^}]*\\}"
    },
    {
      "name": "keyword.control.nebs",
      "match": "\\b(collision-detect|selected-object|print-dst-rect|print-src-rect|reload-texture|set-background|texture-status|master-unlock|always-clear|ensure-array|feature-test|renderobject|set-fixed-dt|standardfile|update-text|--headless|input-wait|push-front|--recover|add-clock|halt-once|keyDelete|pop-front|push-back|category|critical|errorlog|function|functree|pop-back|show-fps|snapshot|variable|console|set-fps|set-res|always|assert|delete|deload|global|mirror|return|rotate|unlock|clear|crash|debug|draft|error|fetch|parse|print|query|spawn|state|beep|copy|echo|eval|exit|fill|help|json|load|lock|move|once|task|time|wait|warn|zoom|all|cam|env|for|get|key|log|off|set|if|on)\\b"
    },
    {
      "name": "markup.underline.link",
      "match": "\\./[^\\s|]+"
    },
    {
      "name": "constant.numeric.nebs",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  ]
}