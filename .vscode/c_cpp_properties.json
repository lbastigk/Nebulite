{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "/usr/include/c++/13/",
                "/usr/include/x86_64-linux-gnu/c++/13/",
                "/usr/include/",
                "${workspaceFolder}/**",       // Covers everything in the project
                "${workspaceFolder}/external/SDL2_build/include/SDL2",           // Local SDL installation
                "${workspaceFolder}/external/rapidjson/include/rapidjson",       // Local rapidjson
                "${workspaceFolder}/external/exprtk",                            // Local exprtk
                "/usr/include/x86_64-linux-gnu/qt5/",
                "/usr/include/x86_64-linux-gnu/qt5/QtCore",
                "/usr/include/x86_64-linux-gnu/qt5/QtGui",
                "/usr/include/x86_64-linux-gnu/qt5/QtWidgets",
                "${workspaceFolder}/src/Engine/",            // ProjectEngine root
                "${workspaceFolder}/src/Engine/Helper/",
                "${workspaceFolder}/src/Engine/Rendering/",
                "${workspaceFolder}/src/Editor/",           // ProjectEditor root
                "${workspaceFolder}/src/Editor/QT/",
                "${workspaceFolder}/src/Tests/",            // ProjectTestEnvironment
                "${workspaceFolder}/src/Platform/"                  // Platform
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "browse": {
                "path": [
                    "/usr/include/SDL2",
                    "${workspaceFolder}/Engine",
                    "${workspaceFolder}/Engine/GameVars",
                    "${workspaceFolder}/Engine/Helper",
                    "${workspaceFolder}/Engine/Rendering",
                    "${workspaceFolder}/Editor",
                    "${workspaceFolder}/Editor/QT/",
                    "${workspaceFolder}/Tests",
                    "${workspaceFolder}/Platform"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
