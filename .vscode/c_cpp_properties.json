{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "/usr/include/c++/13/",
                "/usr/include/x86_64-linux-gnu/c++/13/",
                "/usr/include/",
                "${workspaceFolder}/**",       // Covers everything in the project
                "/usr/include/SDL2/",           // Path to SDL2 headers on Linux
                "/usr/include/rapidjson/",     // Path to rapidjson
                "/usr/include/x86_64-linux-gnu/qt5/",           //QT5
                "/usr/include/x86_64-linux-gnu/qt5/QtCore",
                "/usr/include/x86_64-linux-gnu/qt5/QtGui",
                "/usr/include/x86_64-linux-gnu/qt5/QtWidgets",
                "${workspaceFolder}/ProjectEngine/",            // ProjectEngine root
                "${workspaceFolder}/ProjectEngine/GameLoop/",   // ProjectEngine subdirectories
                "${workspaceFolder}/ProjectEngine/GameVars/",
                "${workspaceFolder}/ProjectEngine/Helper/",
                "${workspaceFolder}/ProjectEngine/Rendering/",
                "${workspaceFolder}/ProjectEditor/",           // ProjectEditor root
                "${workspaceFolder}/ProjectEditor/QT/",
                "${workspaceFolder}/ProjectTestEnvironment/",  // ProjectTestEnvironment
                "${workspaceFolder}/Platform/"                 // Platform
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "browse": {
                "path": [
                    "/usr/include/SDL2",
                    "${workspaceFolder}/ProjectEngine",
                    "${workspaceFolder}/ProjectEngine/GameLoop",
                    "${workspaceFolder}/ProjectEngine/GameVars",
                    "${workspaceFolder}/ProjectEngine/Helper",
                    "${workspaceFolder}/ProjectEngine/Rendering",
                    "${workspaceFolder}/ProjectEditor",
                    "${workspaceFolder}/ProjectEditor/QT/",
                    "${workspaceFolder}/ProjectTestEnvironment",
                    "${workspaceFolder}/Platform"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
